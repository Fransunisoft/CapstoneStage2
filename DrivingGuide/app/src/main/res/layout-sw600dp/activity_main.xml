<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="6dp"
    android:paddingStart="6dp"
    android:paddingEnd="6dp"
    android:paddingTop="6dp"
    android:layout_gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="@string/title_activity_tutorials"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tutorialbtn"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:drawableStart="@drawable/tut_icon"
            android:contentDescription="@string/title_activity_tutorials"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/primary_text"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="@string/title_activity_signrules"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/signbtn"
            android:layout_below="@+id/tutorialbtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/helpout"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:contentDescription="@string/title_activity_signrules"
            android:textColor="@color/primary_text"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="@string/title_activity_Safety_Guide"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/guidebtn"
            android:layout_below="@+id/signbtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/guide"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:contentDescription="@string/title_activity_Safety_Guide"
            android:textColor="@color/primary_text"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="@string/title_activity_places"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/trafficbtn"
            android:layout_below="@+id/guidebtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/update_icon"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:contentDescription="@string/title_activity_places"
            android:paddingTop="10dp"
            android:textColor="@color/primary_text"
            />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_home_footer">
        </com.google.android.gms.ads.AdView>
    </RelativeLayout>
</ScrollView>


